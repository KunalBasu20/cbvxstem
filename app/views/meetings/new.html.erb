<h1>New Meeting</h1>

<%= form_for(@new_meeting, url: doctor_create_meeting_path(@cur_user_holder)) do |form| %>


   An available meeting with <%= form.select :category, options_for_select(["Doctors", "Patients"], form.object.category || "Not yet selected"), :required => true %><br />

  <br>

  <div class="field">
    <%= form.label :start_time %>
    <%= form.datetime_select :start_time, :discard_minute => true %>
  </div>

  <div class="field">
    <%= form.label :end_time %>
    <%= form.datetime_select :end_time, :discard_minute => true %>
  </div>

  <div class="actions">
    <%= form.submit %>
  </div>
<% end %>


<%= link_to 'Back', user_holder_meetings_path(current_user) %>
